    "version": "0.2.0",
    "configurations": [

        {
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "name": "Modo Debug",
            "program": "${workspaceFolder}/src/index.js", //Esto se modifica depende del nombre y ruta del archivo. Se usa nodemon setup porque es el paquete implementado para el inicio de la app
            "request": "launch",
            "restart": true,
            "runtimeExecutable": "nodemon",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        }
    ]
}